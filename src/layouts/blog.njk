{% extends 'base.njk' %}

{% block main %}
  <article class="post">
    <header>
      <h1 class="post__title">Blog posts</h1>
    </header>
    <main class="post__content">
      <ul class="archive">
        {% for post in collections.posts %}

          {% if not post.draft %}
          <li class="archive__post">
            {% if post.draft %}
              <span class="archive__draft-label">DRAFT</span>
            {% endif %}

            <a href="/{{ post.path }}/" class="archive__post-title">
              {{ post.title }}
            </a>
            <!-- <span class="archive__post-date">{{ post.date | date }}</span> -->

          </li>
          {% endif %}

        {% endfor %}
      </ul>
    </main>
  </article>
{% endblock %}
