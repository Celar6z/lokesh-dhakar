{% extends 'base.njk' %}

{% block main %}
  <article class="post">
    <header>
      <h1 class="post__title">Blog posts</h1>
    </header>
    <main class="post__content">
      <ul>
        {% for post in collections.posts %}
          <li>
            <a href="/{{ post.path }}">{{ post.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </main>
  </article>
{% endblock %}


